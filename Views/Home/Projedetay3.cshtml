@{
    ViewData["Title"] = "Samsun Şehir Hastanesi";
}

<body class="detay-page">
    <div class="header-background-detay"></div>

  <section class="hero">
    
    <!-- Metin alanı (sol kısım) -->
    <div class="hero-text">
      <h2>T.C. Sağlık Bakanlığı Samsun Şehir Hastanesi</h2>
      
      <div class="project-details">
        <div class="detail-item">
          <h3>Proje Durumu</h3>
          <p>Tamamlandı</p>
        </div>
        <div class="detail-item">
          <h3>Yapım Yılı</h3>
          <p>2020 – 2024</p>
        </div>
        <div class="detail-item">
          <h3>Alan/Kapasite</h3>
          <p>45.000 m² | Yükseklik: 186 m</p>
        </div>
        <div class="detail-item">
          <h3>Lokasyon</h3>
          <p>Samsun, Türkiye</p>
        </div>
      </div>
      
    </div>
    
    <!-- Görsel alanı (sağ kısım) -->
    <div class="hero-image">
      <!-- Kendi resminizin yolunu ekleyebilirsiniz -->
      <img src="/images/projeler/proje3.7.jpeg" alt="Allianz Tower" />
    </div>
    
    
  </section>
  
  <!-- Açıklama metni (hero altında) -->
  <section class="description">
    <p>
Hastane projesi 900 yatak kapasitelidir.

213.886 m2 arsa alanının üzerine yaklaşık 300.000 m2 inşaat alanına sahiptir.

Proje 1020 adet deprem izolatörü ile depreme son derece dayanıklı olarak inşa edilecektir.
    </p>
  </section>

<div class="gallery-container">
  <!-- Sol kısım: "Galeri" yazısı -->
  <div class="gallery-sidebar">
    <h2 class="galeri-text">GALERİ</h2>
  </div>

  <!-- Sağ kısım: Fotoğraflar -->
  <div class="gallery-display">
    <img src="/images/projeler/proje3.1.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje3.2.jpeg" alt="Fotoğraf 2">
    <img src="/images/projeler/proje3.3.jpeg" alt="Fotoğraf 3">
    <img src="/images/projeler/proje3.4.jpeg" alt="Fotoğraf 4">
     <img src="/images/projeler/proje3.5.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje3.6.jpeg" alt="Fotoğraf 2">
    <img src="/images/projeler/proje3.7.jpeg" alt="Fotoğraf 3">
    <img src="/images/projeler/proje3.3.jpeg" alt="Fotoğraf 4">
    <!-- İstediğiniz kadar ekleyebilirsiniz -->
  </div>
</div>

<!-- Lightbox (büyük gösterim) yapısı -->
<div id="lightboxModal" class="lightbox-modal">
  <span class="lightbox-close">&times;</span>
  <img class="lightbox-modal-content" id="lightboxImage" alt="Büyük Gösterim">
</div>



</body>
@{
    ViewData["Title"] = "Avrocity Lüks Konut Projesi";
}

<body class="detay-page">
    <div class="header-background-detay"></div>

  <section class="hero">
    
    <!-- Metin alanı (sol kısım) -->
    <div class="hero-text">
      <h2>Avrocity Lüks Konut Projesi</h2>
      
      <div class="project-details">
        <div class="detail-item">
          <h3>Proje Durumu</h3>
          <p>Tamamlandı</p>
        </div>
        <div class="detail-item">
          <h3>Yapım Yılı</h3>
          <p>2006 – 2011</p>
        </div>
        <div class="detail-item">
          <h3>Alan/Kapasite</h3>
          <p>45.000 m² | Yükseklik: 186 m</p>
        </div>
        <div class="detail-item">
          <h3>Lokasyon</h3>
          <p>Duhok, Irak</p>
        </div>
      </div>
      
    </div>
    
    <!-- Görsel alanı (sağ kısım) -->
    <div class="hero-image">
      <!-- Kendi resminizin yolunu ekleyebilirsiniz -->
      <img src="/images/projeler/proje4.10.jpeg" alt="Allianz Tower" />
    </div>
    
    
  </section>
  
  <!-- Açıklama metni (hero altında) -->
  <section class="description">
    <p>
        Proje kapsamında 1. ve 2. etapta toplam 7.150 Adet yüksek standartlı konut  ve 93 adet villa, 432 yüksek standartlı rezidans, 95.709 m2’lik dev alışveriş ve yaşam merkezi, 211 yataklı otel ve 33.597 m2’ye yayılan rezidans katlara sahip ofis kulesi yer almaktadır.
    </p>
  </section>


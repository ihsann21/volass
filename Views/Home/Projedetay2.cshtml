
@{
    ViewData["Title"] = "T.C. Maliye Bakanlığı Yüksek Eğitim Merkezi";
}
<body class="detay-page">
    <div class="header-background-detay"></div>

  <section class="hero">
    
    <!-- Metin alanı (sol kısım) -->
    <div class="hero-text">
      <h2>T.C. Maliye Bakanlığı Yüksek Eğitim Merkezi</h2>
      
      <div class="project-details">
        <div class="detail-item">
          <h3>Proje Durumu</h3>
          <p>Tamamlandı</p>
        </div>
        <div class="detail-item">
          <h3>Yapım Yılı</h3>
          <p>2015 – 2016</p>
        </div>
        <div class="detail-item">
          <h3>Alan/Kapasite</h3>
          <p>45.000 m² | Yükseklik: 186 m</p>
        </div>
        <div class="detail-item">
          <h3>Lokasyon</h3>
          <p>Ankara, Türkiye</p>
        </div>
      </div>
      
    </div>
    
    <!-- Görsel alanı (sağ kısım) -->
    <div class="hero-image">
      <!-- Kendi resminizin yolunu ekleyebilirsiniz -->
      <img src="/images/projeler/proje2.1.jpeg" alt="Allianz Tower" />
    </div>
    
    
  </section>
  
  <!-- Açıklama metni (hero altında) -->
  <section class="description">
    <p>
    1 - Eğitim kompleksi, zemine kadar eğimli ve çim yüzeyli çatı.
    2 - Doğal ışık ve doğal havalandırma sistemi.
    3 - Yağmur suyu depolama sistemi.
    4 - 60.000 m2 inşaat alanı.
    5 - Çok amaçlı salon, fuaye, kapalı spor alanları.
    6 - 405 araçlık kapalı otopark.
    </p>
  </section>

<div class="gallery-container">
  <!-- Sol kısım: "Galeri" yazısı -->
  <div class="gallery-sidebar">
    <h2 class="galeri-text">GALERİ</h2>
  </div>

  <!-- Sağ kısım: Fotoğraflar -->
  <div class="gallery-display">
    <img src="/images/projeler/proje2.1.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje2.2.jpeg" alt="Fotoğraf 2">
   
    <!-- İstediğiniz kadar ekleyebilirsiniz -->
  </div>
</div>

<!-- Lightbox (büyük gösterim) yapısı -->
<div id="lightboxModal" class="lightbox-modal">
  <span class="lightbox-close">&times;</span>
  <img class="lightbox-modal-content" id="lightboxImage" alt="Büyük Gösterim">
</div>



</body>
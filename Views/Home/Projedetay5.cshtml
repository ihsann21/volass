@{
    ViewData["Title"] = "Duhok Üniversitesi Kongre Merkezi";
}


<body class="detay-page">
    <div class="header-background-detay"></div>

  <section class="hero">
    
    <!-- Metin alanı (sol kısım) -->
    <div class="hero-text">
      <h2>Duhok Üniversitesi Kongre Merkezi</h2>
      
      <div class="project-details">
        <div class="detail-item">
          <h3>Proje Durumu</h3>
          <p>Tamamlandı</p>
        </div>
        <div class="detail-item">
          <h3>Yapım Yılı</h3>
          <p>2006 – 2007</p>
        </div>
        <div class="detail-item">
          <h3>Alan/Kapasite</h3>
          <p>45.000 m² | Yükseklik: 186 m</p>
        </div>
        <div class="detail-item">
          <h3>Lokasyon</h3>
          <p>Duhok, Irak</p>
        </div>
      </div>
      
    </div>
    
    <!-- Görsel alanı (sağ kısım) -->
    <div class="hero-image">
      <!-- Kendi resminizin yolunu ekleyebilirsiniz -->
      <img src="/images/projeler/proje5.6.jpeg" alt="Allianz Tower" />
    </div>
    
    
  </section>
  
  <!-- Açıklama metni (hero altında) -->
  <section class="description">
    <p>
        1 - 843 kişilik büyük konferans salonu, 760 m2
        2 - 330 kişilik küçük konferans salonu, 325 m2
        3 - Fuaye, 1424 m2
        4 - Konferans salonlarına bağlı simultane tercüme odaları, ses ve ışık odaları, sanatcı soyunma ve hazırlık odaları
        5 - 3 adet Workshop, 330 m2
        6 - Kütüphane, 35m2
        7 - Cafe, 198 m2
        8 - İdari ofisler, 125 m2
        9 - Otel bölümüne ait 6 adet standart yatak odaları ve 3 adet suit yatak odası bulunmaktadır.


    </p>
  </section>

<div class="gallery-container">
  <!-- Sol kısım: "Galeri" yazısı -->
  <div class="gallery-sidebar">
    <h2 class="galeri-text">GALERİ</h2>
  </div>

  <!-- Sağ kısım: Fotoğraflar -->
  <div class="gallery-display">
    <img src="/images/projeler/proje5.1.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje5.2.jpeg" alt="Fotoğraf 2">
    <img src="/images/projeler/proje5.3.jpeg" alt="Fotoğraf 3">
    <img src="/images/projeler/proje5.4.jpeg" alt="Fotoğraf 4">
     <img src="/images/projeler/proje5.5.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje5.6.jpeg" alt="Fotoğraf 2">
    <!-- İstediğiniz kadar ekleyebilirsiniz -->
  </div>
</div>

<!-- Lightbox (büyük gösterim) yapısı -->
<div id="lightboxModal" class="lightbox-modal">
  <span class="lightbox-close">&times;</span>
  <img class="lightbox-modal-content" id="lightboxImage" alt="Büyük Gösterim">
</div>




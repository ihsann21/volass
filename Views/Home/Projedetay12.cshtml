    ViewData["Title"] = "Helenium Wings";
}



<body class="detay-page">
    <div class="header-background-detay"></div>

  <section class="hero">
    
    <!-- Metin alanı (sol kısım) -->
    <div class="hero-text">
      <h2>Helenium Wings</h2>
      
      <div class="project-details">
        <div class="detail-item">
          <h3>Proje Durumu</h3>
          <p>Tamamlandı</p>
        </div>
        <div class="detail-item">
          <h3>Yapım Yılı</h3>
          <p>2010 – 2014</p>
        </div>
        <div class="detail-item">
          <h3>Alan/Kapasite</h3>
        </div>
        <div class="detail-item">
          <h3>Lokasyon</h3>
          <p>İstanbul, Türkiye</p>
        </div>
      </div>
      
    </div>
    
    <!-- Görsel alanı (sağ kısım) -->
    <div class="hero-image">
      <!-- Kendi resminizin yolunu ekleyebilirsiniz -->
      <img src="/images/projeler/proje12.4.jpeg" alt="Allianz Tower" />
    </div>
    
    
  </section>
  
  <!-- Açıklama metni (hero altında) -->
  <section class="description">
    <p>

    </p>
  </section>

<div class="gallery-container">
  <!-- Sol kısım: "Galeri" yazısı -->
  <div class="gallery-sidebar">
    <h2 class="galeri-text">GALERİ</h2>
  </div>

  <!-- Sağ kısım: Fotoğraflar -->
  <div class="gallery-display">
    <img src="/images/projeler/proje12.1.jpeg" alt="Fotoğraf 1">
    <img src="/images/projeler/proje12.2.jpeg" alt="Fotoğraf 2">
    <img src="/images/projeler/proje12.3.jpeg" alt="Fotoğraf 3">
    <img src="/images/projeler/proje12.4.jpeg" alt="Fotoğraf 4">
     <img src="/images/projeler/proje12.5.jpeg" alt="Fotoğraf 1">
  
    

    <!-- İstediğiniz kadar ekleyebilirsiniz -->
  </div>
</div>

<!-- Lightbox (büyük gösterim) yapısı -->
<div id="lightboxModal" class="lightbox-modal">
  <span class="lightbox-close">&times;</span>
  <img class="lightbox-modal-content" id="lightboxImage" alt="Büyük Gösterim">
</div>



</body>